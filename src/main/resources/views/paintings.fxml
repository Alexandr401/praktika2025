<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gallery.controller.PaintingsController"
      alignment="TOP_CENTER" style="-fx-padding: 20;">

    <Label text="Картины" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

    <ToolBar styleClass="adm_ToolBar">
        <TextField fx:id="searchField" promptText="Поиск..." onKeyReleased="#onSearch" prefWidth="250"/>
        <Button text="Сбросить фильтр" onAction="#resetFilters"/>
    </ToolBar>

    <TableView fx:id="paintingsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="titleColumn" text="Название" minWidth="100" prefWidth="220" maxWidth="220"  style="-fx-alignment: CENTER; -fx-padding: 5;"/>
            <TableColumn fx:id="imagesColumn" text="Картина"  minWidth="110" maxWidth="110" style="-fx-alignment: CENTER; -fx-padding: 5;"/>
            <TableColumn fx:id="genreColumn" text="Жанр"  minWidth="100" prefWidth="200" maxWidth="200"  style="-fx-alignment: CENTER; -fx-padding: 5;"/>
            <TableColumn fx:id="artistColumn" text="Художник" minWidth="100" prefWidth="200" maxWidth="200" style="-fx-alignment: CENTER; -fx-padding: 5;"/>
            <TableColumn fx:id="yearColumn" text="Год"   minWidth="60" maxWidth="60" style="-fx-alignment: CENTER; -fx-padding: 5;"/>
            <TableColumn fx:id="descriptionColumn" text="Описание" prefWidth="1000" style="-fx-alignment: CENTER; -fx-padding: 5;"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Добавить" onAction="#addPainting"/>
        <Button text="Изменить" onAction="#editPainting"/>
        <Button text="Удалить" onAction="#deletePainting"/>
    </HBox>

</VBox>
